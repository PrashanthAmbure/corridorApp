<!doctype html>
<html class="no-js" lang="">

<head>
    <%- include common/head.ejs %>
</head>

<body>
    <div class="wrapall">
        <div class="loader-wrap" ng-class="{'loader-hide': true}">
            <div class="page-loader"></div>
        </div>
        <section>
            <%- include common/header.ejs %>
        </section>
        <section>
            <div class="header-flush" ng-controller="appDetailController">
                <div class="page-layout detail-page" ng-if="item">
                    <div layout="row" layout-sm="column">
                        <div flex="80" flex-sm="100">
                            <div class="app-details">
                                <div layout="row" layout-sm="column">
                                    <div class="image-section text-center" flex="20" flex-sm="100">
                                        <img ng-src="{{item.imgurl || '/images/default.png'}}">
                                    </div>
                                    <div class="app-intro" flex="55" flex-sm="100">
                                        <div class="md-title">
                                            {{item.name}}
                                        </div>
                                        <div btf-markdown="item.shortDesc">
                                        </div>
                                        <md-button class="md-raised md-primary pull-right" ng-click="expressInterestDetails($event)">
                                            Express Interest
                                        </md-button>
                                    </div>
                                    <div class="app-summary" flex="25" flex-sm="100">

                                        <div layout="row" class="text-right">
                                            <span class="" flex="50">Posted date : </span>
                                            <span flex="50" class="app-summary-value"> {{item.createdAt | date:'yyyy-MM-dd'}}</span>
                                        </div>
                                        <div layout="row" class="text-right">
                                            <span class="" flex="50">Last Updated : </span><span flex="50" class="app-summary-value"> {{(item.lastUpdated || item.createdAt) | date:'yyyy-MM-dd'}}</span>
                                        </div>
                                        <div layout="row" class="text-right">
                                            <span class="" flex="50">Stage : </span> <span flex="50" class="app-summary-value"> {{item.status}}</span>
                                        </div>
                                        <div layout="row" class="text-right">
                                            <span class="" flex="50">Category : </span> <span flex="50" class="app-summary-value"> {{item.category}}</span>
                                        </div>
                                        <!-- <div layout="row" class="text-right">
                                            <span class="" flex="50">Effort :</span> <span flex="50" class="">{{item.effort}}</span> 
                                        </div> -->
                                        <div layout="row" class="text-right">
                                            <span class="" flex="50">Likes : </span>
                                            <span class="app-summary-value" flex="50">
                                                {{item.likes.length}}
                                            <a href="#" ng-click="updateLikes( $event )" class="like-icon"><i ng-class="likeClass" style="font-size:18px"></i></a>
                                            </span>
                                        </div>
                                        <!-- <div class="featured-panel">
                                            <div class="pull-right">
                                                <a href="#" class="glyphicon glyphicon-heart"></a>
                                                <a href="#" class="glyphicon glyphicon-thumbs-up"></a>
                                            </div>
                                            <div class="rating-panel">
                                                <rating ng-model="item.rate" max="5" readonly="isReadonly" on-hover="hoveringOver(value)"></rating>
                                            </div>

                                        </div> -->
                                    </div>
                                </div>
                                <md-content layout-padding>
                                    <md-tabs md-dynamic-height md-border-bottom>
                                        <md-tab label="Introduction" ng-if="item.longDesc">
                                            <md-content class="md-padding">
                                                {{item.longDesc}}
                                            </md-content>
                                        </md-tab>
                                        <md-tab label="Analysis" ng-if="item.solution">
                                            <md-content class="md-padding">
                                                {{item.solution}}
                                            </md-content>
                                        </md-tab>
                                        <md-tab label="Video Links" ng-if="item.vedioLink">
                                            <md-content>
                                                <iframe width="100%" height="500" ng-src="{{item.vedioLink | trustAsResourceUrl}}">
                                                </iframe>
                                            </md-content>
                                        </md-tab>
                                        <md-tab label="Team">
                                            <div layout="column">
                                                <md-content>
                                                    <div class="md-title">
                                                        Team
                                                    </div>
                                                    <div class="" ng-repeat="mem in item.contributors">
                                                        <a href="#" class="">
                                                        {{mem}}
                                                    </a>
                                                    </div>
                                                </md-content>
                                                <md-content>
                                                    <div class="">
                                                        <span class="md-title">Total effort : </span><span class="md-subhead">{{item.effort}}</span>
                                                    </div>
                                                    <div class="">
                                                        <span class="md-title">Minimum bid : </span><span class="md-subhead">{{item.minimumBid}}</span>
                                                    </div>
                                                    <!-- <div class="">
                                                        <span class="md-title">% of completion : </span><span class="md-subhead">{{item.percentageOfCompletion}}%</span>
                                                </div> -->
                                                </md-content>
                                            </div>
                                        </md-tab>
                                    </md-tabs>
                                </md-content>

                            </div>
                        </div>
                        <div flex="20" flex-sm="100">
                            <div class="proposer-details">
                                <!-- <div>
                                    % of completion
                                    <md-progress-linear md-mode="determinate" value="20">20</md-progress-linear>
                                </div> -->
                                <div>
                                    <div class="md-title">Proposed by</div>
                                    <div ng-repeat="mem in item.proposedTeam">
                                        <a href="#">
                                            {{mem}}
                                        </a>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <%- include common/footer.ejs %>
        </section>
    </div>

    <%- include common/footer.script.includes.ejs %>
    <script src="/javascripts/controllers/app-details-controller.js"></script>
    <script src="/javascripts/controllers/express-interest-controller.js"></script>
    <script src="/javascripts/modules/app-details.js"></script>
    <style type="text/css">
        .tab-content {
            padding: 20px 0
        }
        
        .update-form {
            margin-bottom: 20px;
        }
        
        .field-wrapper {
            padding: 2px 2px 26px;
        }
        
        img {
            max-width: 100%;
            height: auto;
        }
        
        .like-icon {
            color: rgb(63, 81, 181);
        }
        
        .proposer-details {
            margin-left: 10px;
        }
        
        .detail-page {
            margin-top: 20px;
            font-size: 13px;
            line-height: 24px;
            margin-bottom: 20px;
        }
        
        @media (max-width: 600px) {
            .proposer-details {
                margin-left: 0;
                margin-top: 10px;
            }
        }
        
        .app-details {
            padding: 15px 15px 0 15px;
        }
        
        .proposer-details {
            padding: 15px;
        }
        
        .app-intro {
            padding-left: 15px;
        }
        
        .app-summary-value {
            text-align: left;
            padding-left: 5px;
        }
    </style>
</body>

</html>