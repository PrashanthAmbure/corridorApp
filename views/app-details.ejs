<!doctype html>
<html class="no-js" lang="">

<head>
    <%- include common/head.ejs %>
</head>

<body>
    <div class="wrapall">
        <div class="loader-wrap" ng-class="{'loader-hide': true}">
            <div class="page-loader"></div>
        </div>
        <section>
            <%- include common/header.ejs %>
        </section>
        <section>
            <div class="header-flush" ng-controller="appDetailController">
                <div class="page-layout detail-page" ng-if="item">
                    <div layout="row" layout-sm="column">
                        <div flex="75" flex-sm="100">
                            <div class="app-details">
                                <div layout="row" layout-sm="column">
                                    <div class="image-section text-center" flex="20" flex-sm="100">
                                        <img ng-src="{{item.imgurl || '/images/default.png'}}">
                                    </div>
                                    <div class="app-intro" flex="55" flex-sm="100">
                                        <div class="md-title">
                                            {{item.name}}
                                        </div>
                                        <div btf-markdown="item.shortDesc">
                                        </div>
                                    </div>
                                    <div class="app-summary" flex="25" flex-sm="100">

                                        <div layout="row" class="text-right" ng-if="item.createdAt">
                                            <span class="" flex="45">Posted date : </span>
                                            <span flex="55" class="app-summary-value"> {{item.createdAt | date:'yyyy-MM-dd'}}</span>
                                        </div>
                                        <div layout="row" class="text-right" ng-if="item.lastUpdated">
                                            <span class="" flex="45">Last Updated : </span><span flex="55" class="app-summary-value"> {{(item.lastUpdated || item.createdAt) | date:'yyyy-MM-dd'}}</span>
                                        </div>
                                        <div layout="row" class="text-right" ng-if="item.status">
                                            <span class="" flex="45">Stage : </span> <span flex="55" class="app-summary-value"> {{item.status}}</span>
                                        </div>
                                        <div layout="row" class="text-right" ng-if="item.category">
                                            <span class="" flex="45">Category : </span> <span flex="55" class="app-summary-value"> {{item.category}}</span>
                                        </div>
                                        <!-- <div layout="row" class="text-right">
                                            <span class="" flex="50">Effort :</span> <span flex="50" class="">{{item.effort}}</span> 
                                        </div> -->
                                        <div layout="row" class="text-center">
                                            <span flex>
                                                <a href="#" ng-click="updateLikes($event)">
                                                    <div ng-class="likeClass">
                                                        <span flex="80" class="" >Upvote</span>
                                                        <span class="upvote-line"> | </span>
                                                        <span class="upvote-count">{{item.likes.length}}</span>
                                                    </div>
                                                </a>
                                            </span>
                                            
                                            <!--<span class="app-summary-value" flex="55">
                                                {{item.likes.length}}
                                            <a href="#" ng-click="updateLikes( $event )" class="like-icon"><i ng-class="likeClass" style="font-size:18px"></i></a>
                                            </span> -->
                                        </div>
                                    </div>
                                </div>
                                <md-content layout-padding>
                                    <md-tabs md-dynamic-height md-border-bottom>
                                        <md-tab label="Introduction" ng-if="item.longDesc">
                                            <md-content class="md-padding">
                                                <div btf-markdown="item.longDesc"></div>
                                            </md-content>
                                        </md-tab>
                                        <md-tab label="Analysis" ng-if="item.solution">
                                            <md-content class="md-padding">
                                                <div btf-markdown="item.solution"></div>
                                            </md-content>
                                        </md-tab>
                                        <md-tab label="Video Links" ng-if="item.vedioLink">
                                            <md-content class="md-padding">
                                                <iframe width="100%" height="500" ng-src="{{item.vedioLink | trustAsResourceUrl}}">
                                                </iframe>
                                            </md-content>
                                        </md-tab>
                                        <md-tab label="Team">
                                            <div layout="column" class="md-padding">
                                                <md-content ng-if="item.contributors&&item.contributors.length">
                                                    <div class="md-title">
                                                        Team
                                                    </div>
                                                    <div class="" ng-repeat="mem in item.contributors">
                                                        <a ng-href="mailto:{{mem.mail}}" class="">
                                                        {{mem.fullName}}
                                                    </a>
                                                    </div>
                                                </md-content>
                                                <md-content >
                                                    <div ng-if="item.effort">
                                                        <span class="md-title">Total effort : </span><span class="md-subhead">{{item.effort}}</span>
                                                    </div>
                                                    <div ng-if="item.minimumBid">
                                                        <span class="md-title">Minimum bid : </span><span class="md-subhead">{{item.minimumBid}}</span>
                                                    </div>
                                                    <!-- <div class="">
                                                        <span class="md-title">% of completion : </span><span class="md-subhead">{{item.percentageOfCompletion}}%</span>
                                                </div> -->
                                                </md-content>
                                            </div>
                                        </md-tab>
                                    </md-tabs>
                                </md-content>

                            </div>
                        </div>
                        <div flex="25" flex-sm="100">
                            <div class="proposer-details">
                                <!-- <div>
                                    % of completion
                                    <md-progress-linear md-mode="determinate" value="20">20</md-progress-linear>
                                </div> -->
                                <div>
                                    <div class="md-title">Proposed by</div>
                                    <div class="proposed-team-wrap">
                                        <div ng-repeat="mem in item.proposedTeam">
                                            <a ng-href="mailto:{{mem.mail}}">
                                                <i class="fa fa-envelope-o"></i>
                                                &nbsp;{{mem.fullName}}
                                            </a>
                                        </div>
                                        <md-button ng-if="item.owner.mail != currentUser.mail" class="md-raised md-primary" ng-click="expressInterestDetails($event)">
                                            Express Interest
                                        </md-button>
                                        <md-button ng-if="item.owner.mail == currentUser.mail" class="md-raised md-primary" ng-href="/propose-form#edit/{{item._id}}">
                                            Edit
                                        </md-button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <section>
            <%- include common/footer.ejs %>
        </section>
    </div>
    <%- include common/footer.script.includes.ejs %>
    <%- include common/footer.script.markdown.includes.ejs %>
    <script src="/javascripts/controllers/app-details-controller.js"></script>
    <script src="/javascripts/controllers/express-interest-controller.js"></script>
    <script src="/javascripts/modules/app-details.js"></script>
    <style type="text/css">
        .tab-content {
            padding: 20px 0
        }
        
        .update-form {
            margin-bottom: 20px;
        }
        
        .field-wrapper {
            padding: 2px 2px 26px;
        }
        
        img {
            max-width: 100%;
            height: auto;
        }
        
        .like-icon {
            color: rgb(63, 81, 181);
        }
        
        .proposer-details {
            margin-left: 10px;
            text-align: center;
        }
        
        .detail-page {
            margin-top: 20px;
            font-size: 13px;
            line-height: 24px;
            margin-bottom: 20px;
        }
        
        @media (max-width: 600px) {
            .proposer-details {
                margin-left: 0;
                margin-top: 10px;
            }
        }
        
        .app-details {
            padding: 15px 15px 0 15px;
        }
        
        .proposer-details {
            padding: 15px;
        }
        
        .app-intro {
            padding-left: 15px;
        }
        
        .app-summary-value {
            text-align: left;
            padding-left: 5px;
        }
        .color-for-down-vote {
            color : #B5B0B0;
        }
        .proposed-team-wrap {
            margin-top: 20px;
        }
        .proposed-team-wrap a {
            text-decoration :none;
        }
    </style>
</body>

</html>