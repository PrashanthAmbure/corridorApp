<div class="app-search-overlay">
    <span class="close fa fa-remove" id="app-search-popup-close"></span>
    <div class="search-content page-layout">

        <div ng-controller="searchPopCtrl">

            <div class="container search-wrapper" ng-class="{'result-found': filteredApps().length}">
                <h3>
                    Search Apps
                </h3>
                <span class="fa fa-search"></span>
                <input class="search-app" autocomplete="off" ng-model="searchText" id="search-app" type="text" name="search" placeholder="What are you looking for?">
                <div>
                    <div class="row app-container">
                        
                        <div class="tile repeated-item" ng-repeat="item in filteredApps()">
                            <%if( typeof editAppTile !== 'undefined' && editAppTile ) {%>
                                <div app-tile-edit data-item="item" data-index="$index" data-delete-item="deleteItem" data-key="key">
                                </div>
                            <%} else {%>
                                <div app-tile data-item="item">
                                </div>
                            <%}%>
                            
                             <div class="loadmore" ng-if="tab.length > limit[key]">
                                <md-button ng-click="$event.preventDefault();limit[key] = limit[key] + 8" class="md-raised md-primary">
                                Loadmore
                                </md-button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
