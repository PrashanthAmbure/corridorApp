<!doctype html>
<html class="no-js" lang="">

<head>
    <%- include common/head.ejs %>

    <link rel="stylesheet" href="/bower_components/components-font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/letsbuild/index.css" />
</head>

<body>

    <div class="loader-wrap" ng-class="{'loader-hide': true}">
        <div class="page-loader"></div>
    </div>
    <div class="wrapall">
        <section>
            <%- include common/header.ejs %>
        </section>
        <section class="header-flush">
            <div class="page-layout" ng-controller="appsController">
                <div layout="row"  layout-wrap layout-align="start center">
                    <div flex="70" flex-sm="100">
                        <h1 class="md-display-1">Your Proposed Apps</h1>
                    </div>
                    <div flex="30" flex-sm="100" class="filter-panel dashboard-filter" >
                        <div layout="row"  layout-align="center center">
                            <div flex="50">
                                <div class="sort-by">
                                    <md-input-container>
                                        <label >Sort By</label>
                                        <md-select ng-model="sortBy">
                                          <md-option value="-lastUpdated">Updated Date</md-option>
                                          <md-option value="-createdAt">Created Date</md-option>
                                          <md-option value="-likes.length">Likes Count</md-option>
                                        </md-select>
                                    </md-input-container>
                                </div>
                            </div>
                            <div flex="50">
                                <div class="dummy-search-wrap">
                                    <label for="dummy-search-field"><span class="fa fa-search"></span></label>
                                    <input id="dummy-search-field" class="search-field " type="text" name="search" ng-focus="searchpop()" placeholder="Search app">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="app-container">
                    
                    <md-content>
                        <md-tabs md-dynamic-height md-border-bottom>
                            <md-tab label="{{key}}" ng-repeat="(key,tab) in apps">
                                <md-content class="tiles-container">
                                    <div ng-if=" getData(key).length ===0">
                                        <div class="margin-flush">
                                            <md-toolbar class="md-warn">
                                                <div class="md-toolbar-tools">
                                                    <h2 class="md-flex">You dont have any items under <strong>{{key}}</strong></h2>
                                                </div>
                                            </md-toolbar>
                                        </div>
                                    </div>
                                    <div class="tiles" layout="row" layout-wrap>
                                        <div  flex="30" flex-sm="100" class="tile-container fadein" app-tile-edit data-item="item" data-index="$index" data-delete-item="deleteItem" data-key="key" ng-repeat="item in getData( key )">
                                        </div>
                                    </div>
                                    <div class="loadmore" ng-if="getData(key).length > limit[key]">
                                        <md-button ng-click="$event.preventDefault();limit[key] = limit[key] + 6" class="md-raised md-primary">
                                            Loadmore
                                        </md-button>
                                    </div>
                                </md-content>
                            </md-tab>
                        </md-tabs>
                    </md-content>
                </div>
            </div>
        </section>
        <section>
            <%- include common/footer.ejs  %>
        </section>
    </div>
    <div search-app data-is-edit="true"></div>
    <script type="text/javascript">
        var serviceConfig = {
            app: {
                url: '/services/collection?cname=letsbuild&isuid=true',
                keys: ['drafts','published']
            }
        }
    </script>
    <%- include common/footer.script.includes.ejs %>
    <%- include common/footer.script.markdown.includes.ejs %>
    <script src="/javascripts/controllers/apps-controller.js"></script>
    <script src="/javascripts/directives/app-tile-directive.js"></script>
    <script src="/javascripts/directives/search-app-directive.js"></script>
    <script src="/javascripts/modules/gallery.js"></script>



</body>

</html>