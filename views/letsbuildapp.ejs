<body>

    <div class="site-wrapper wrapall">
        <%- include common/corridor.header.ejs %>
            <div class="container proposel-app-container" ng-controller="letsBuildController">
                <div class="sixteen columns" ng-if="item" ng-cloak>
                    <div class="row ">
                        <div class="col-sm-9">
                            <div class="app-details">
                                <div class="welcome-details">
                                    <div class="row">
                                        <div class="image-section col-sm-2 text-center">
                                            <img ng-src="{{item.src}}">
                                        </div>
                                        <div class="app-intro col-sm-6">
                                            <h3>  
                                               {{item.name}}
                                            </h3>
                                            <div btf-markdown="item.shortDesc">
                                            </div>
                                        </div>
                                        <div class="app-summary col-sm-4">

                                            <div class="row">
                                                <span class="col-xs-6 text-right">Posted date :</span><span class="col-xs-6">{{item.createdAt | date:'yyyy-MM-dd'}}</span>
                                            </div>
                                            <div class="row">
                                                <span class="col-xs-6 text-right">Last Updated :</span><span class="col-xs-6">{{item.lastUpdated | date:'yyyy-MM-dd'}}</span>
                                            </div>
                                            <div class="row">
                                                <span class="col-xs-6 text-right">Stage:</span> <span class="col-xs-6">{{item.status}}</span>
                                            </div>
                                            <div class="row">
                                                <span class="col-xs-6 text-right">Category :</span> <span class="col-xs-6">{{item.division}}</span>
                                            </div>
                                            <div class="row">
                                                <span class="col-xs-6 text-right">Effort :</span> <span class="col-xs-6">{{item.effort}}</span>
                                            </div>
                                            <div class="featured-panel">
                                                <div class="pull-right">
                                                    <a href="#" class="glyphicon glyphicon-heart"></a>
                                                    <a href="#" class="glyphicon glyphicon-thumbs-up"></a>
                                                </div>
                                                <div class="rating-panel">
                                                    <rating ng-model="item.rate" max="5" readonly="isReadonly" on-hover="hoveringOver(value)"></rating>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row marginb-none">
                                    <tabset>
                                        <tab ng-if="item.longDesc">
                                            <tab-heading>
                                                Introduction
                                            </tab-heading>
                                            <div class="col-xs-12" btf-markdown="item.longDesc">
                                            </div>
                                        </tab>
                                        <tab ng-if="item.techDetails">
                                            <tab-heading>
                                                Stage
                                            </tab-heading>
                                            <div class="col-xs-12" btf-markdown="item.techDetails">
                                            </div>
                                        </tab>
                                        <tab ng-if="item.vedioLink">
                                            <tab-heading>
                                                Video
                                            </tab-heading>
                                            <div class="col-xs-12">
                                                <iframe width="100%" height="500" ng-src="{{item.vedioLink | trustAsResourceUrl}}">
                                                </iframe>
                                            </div>
                                        </tab>

                                        <tab ng-if="true">
                                            <tab-heading>
                                                Team
                                            </tab-heading>
                                            <div class="col-xs-12">
                                                <h3>
                                                    Team:
                                                </h3>
                                                <div class="team">
                                                    <a href="#" ng-repeat="mem in item.team">
                                                        {{mem}}
                                                    </a>
                                                </div>
                                                <h3 class="info-line">
                                                    Total effort : <span>{{item.effort}}</span>
                                                </h3>
                                                <h3 class="info-line">
                                                    Minimum bid : <span>{{item.minimumBid}}</span>
                                                </h3>
                                                <h3 class="info-line">
                                                    % of completion : <span>{{item.percentageOfCompletion}}%</span>
                                                </h3>
                                                <div>
                                                    <button class="btn btn-warning"> Join Now</button>
                                                </div>

                                            </div>
                                        </tab>
                                    </tabset>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="proposer-details">
                                <div>
                                    % of completion
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" ng-style="{'width':'{{item.percentageOfCompletion}}%'}">
                                            <span>{{item.percentageOfCompletion}}%</span>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <h3>Proposed by</h3>
                                    <a href="#" ng-repeat="mem in item.proposedTeam">
                                        {{mem}}
                                    </a>

                                </div>
                            </div>
                        </div>
